<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        >

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txt_prizemoney_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:textStyle="bold"
                android:gravity="center"
                android:text="Ramdai Ko lottery (Round 1)" />

            <TextView
                android:id="@+id/txt_prizemoney_period"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_prizemoney_title"
                android:gravity="center"
                android:text="from start date to end date" />

            <TextView
                android:id="@+id/txt_prizemoney_prizemoney"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_prizemoney_period"
                android:gravity="center"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:text="Prize Money :2000 ( Processing )" />

            <TextView
                android:id="@+id/txt_prizemoney_remarks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_prizemoney_prizemoney"
                android:gravity="center"
                android:textSize="16sp"
                android:text="Payment has not been processed yet." />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
