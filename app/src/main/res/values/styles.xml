    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SuccessButton" parent="@android:style/Widget.Button">
        <item name="android:minHeight">40dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/button_success</item>
        <item name="android:padding">5dp</item>
        <item name="android:minWidth">150dp</item>
    </style>

    <style name="DangerButton" parent="@android:style/Widget.Button">
        <item name="android:minHeight">40dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/button_danger</item>
        <item name="android:padding">5dp</item>
        <item name="android:minWidth">150dp</item>
    </style>

    <style name="NormalButton" parent="@android:style/Widget.Button">
        <item name="android:minHeight">40dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/button_normal</item>
        <item name="android:padding">5dp</item>
        <item name="android:minWidth">100dp</item>
    </style>

    <style name="InfoButton" parent="@android:style/Widget.Button">
        <item name="android:minHeight">40dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/button_success</item>
        <item name="android:padding">5dp</item>
        <item name="android:minWidth">100dp</item>
    </style>

    <style name="AppTheme.Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="android:windowBackground">@color/primary</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="colorControlNormal">@color/iron</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="android:textColorHint">@color/iron</item>

        <item name="colorButtonNormal">@color/primary_darker</item>
        <item name="android:colorButtonNormal">@color/primary_darker</item>
    </style>

    <style name="AppTheme.Dark.Dialog" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/white</item>
        <item name="android:textColorPrimary">@color/iron</item>
        <item name="android:background">@color/primary</item>
    </style>

    <style name="AppThemeLakhpati" parent="MyMaterialTheme.Base">

    </style>

    <style name="LoginTheme" parent="AppThemeLakhpati">
        <!-- ... -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="MyMaterialTheme.Base" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@android:color/black</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="SuccessMaterialButton" parent="Widget.MaterialComponents.Button">
        <item name="android:minHeight">50dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:padding">5dp</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:minWidth">120dp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="DangerMaterialButton" parent="Widget.MaterialComponents.Button">
        <item name="android:minHeight">50dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:backgroundTint">@color/primary_dark</item>
        <item name="android:padding">5dp</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:minWidth">100dp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="NormalMaterialButton" parent="Widget.MaterialComponents.Button">
        <item name="android:minHeight">50dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:backgroundTint">@color/light_blue1</item>
        <item name="android:padding">5dp</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:minWidth">100dp</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="AppBadge" parent="Widget.MaterialComponents.Button">
        <item name="android:minHeight">10dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">10sp</item>
        <item name="android:backgroundTint">@color/light_green1</item>
        <item name="android:padding">5dp</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:minWidth">100dp</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:editTextColor">@color/white</item>
        <item name="android:textSize">60sp</item>
        <item name="android:layout_height">10dp</item>
    </style>

    <style name="SearchMaterialButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:backgroundTint">@color/light_blue1</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:minWidth">80dp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="InputStyle" parent="Widget.Design.TextInputLayout">
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@color/white</item>

    </style>

    <style name="DrawerTheme" parent="AppThemeLakhpati">
        <item name="colorSurface">#010101</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="tablayout_style" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:background">@color/fair_blue</item>
        <item name="android:textSize">14sp</item>
        <item name="tabTextColor">@color/primary_dark</item>
        <item name="tabTextAppearance">@color/primary_dark</item>
        <item name="textAllCaps">false</item>
        <item name="android:selectableItemBackground">@color/primary_dark</item>
    </style>

    <style name="AppTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="tabTextColor">@color/primary_dark</item>
        <item name="tabTextAppearance">@color/primary_dark</item>
        <item name="textAllCaps">false</item>
        <item name="android:selectableItemBackground">@color/primary_dark</item>
    </style>

    <style name="AlertDialogCustom" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="android:typeface">normal</item>
        <item name="android:background">@color/light_sky</item>
    </style>

    <style name="AppThemeLakhpati.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppThemeLakhpati.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppThemeLakhpati.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
